<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- APPENDER de consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- timestamp, hilo, nivel, logger y mensaje -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger por paquete personalizado -->
    <logger name="microservice.pacientes" level="DEBUG" />
    
    <!-- Logger específico para controllers -->
    <logger name="microservice.pacientes.infrastructure.adapter.in.controller" level="INFO" />
    
    <!-- Logger específico para services -->
    <logger name="microservice.pacientes.application.service" level="DEBUG" />
    
    <!-- Logger específico para validators -->
    <logger name="microservice.pacientes.infrastructure.validation" level="DEBUG" />

    <!-- Nivel raíz -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>